<!doctype html>
<html>
<head>
	<title>Test Site</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class='row-fluid'>
		<div class='col-xs-12 well'>
			<h1><%= link_to 'Test Site', root_path, :style => 'text-decoration: none; color:inherit'%></h1>
		</div>
	</div>
	<div class="row-fluid">
		<div class="col-xs-2">
			<ul class="nav nav-list">
				<% if user_signed_in? %>
				  	<li class="nav-header" style='margin-bottom:10px;'><%= current_user.email %></li>
				  	<li><%= link_to 'View Users', admin_home_path %></li>
				  	<li><%= link_to 'Comments', new_comment_path %></li>
					<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
				<% else %>
				 	<li><%= link_to 'Sign In', new_user_session_path %></li>
				<% end %>
			</ul>
		</div>
		<div class="col-xs-9">
				<!-- <p class="notice "><%= notice %></p> -->
				<p class="alert "><%= alert %></p>
		
				<%= yield %>
		</div>
	</div>
	
</body>
</html>